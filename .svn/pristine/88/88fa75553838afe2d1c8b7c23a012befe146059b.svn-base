procedure TfrmAcompanhaHistoricoProduto.qryRegistrosBeforeOpen(DataSet: TDataSet);
begin
  qryRegistros.SQL.Strings[qryRegistros.SQL.IndexOf('--AND')+1] := Filtro();
end;

